<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundLight">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frage wird geladen..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textDark"
            android:layout_marginBottom="24dp"
            android:contentDescription="Quizfrage anzeigen" />

        <Button
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antwort 1"
            android:textSize="18sp"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:contentDescription="Antwortmöglichkeit 1" />

        <Button
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antwort 2"
            android:textSize="18sp"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:contentDescription="Antwortmöglichkeit 2" />

        <Button
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antwort 3"
            android:textSize="18sp"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:contentDescription="Antwortmöglichkeit 3" />

        <Button
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Antwort 4"
            android:textSize="18sp"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:contentDescription="Antwortmöglichkeit 4" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/textDark"
            android:layout_marginBottom="16dp"
            android:contentDescription="Quiz-Ergebnis anzeigen" />

    </LinearLayout>
</ScrollView>